@model ScholarshipModel;

@{
    ViewBag.Title = "Application Category";
}

<div class="body-bg-green register-form-div">
    @* Navigation Start *@
    <header>

        <nav class="navbar navbar-expand-xl navbar-dark bg-dark fixed-top  py-0">
            <div class="d-flex justify-content-between mx-2 w-100">

                <div class="d-flex justify-content-start mx-2">
                    <a class="navbar-brand navbar-text" href="/">
                        <img src="/images/body.png" height="30" class="visible-lg-inline-block mr-1" alt="">
                        <span style="vertical-align: middle">Scholarship Monitoring System</span>
                    </a>
                </div>

                <div class="d-flex justify-content-end mx-2">

                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">

                            <li class="nav-item mr-3">
                                <h5>
                                    <a class="nav-link text-success" asp-controller="Profile" asp-action="ProfileDetails">
                                        <i class="fas fa-user mr-1"></i>Mahmudul
                                        Hasan Hridoy
                                    </a>
                                </h5>
                            </li>

                            <li class="nav-item mx-1">
                                <h5><a class="nav-link" href="/app/logout/">LOGOUT<i class="fas fa-sign-out-alt ml-1"></i></a></h5>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    @* Navigation End *@


    @* Appliaction Category Start *@
    <div id="site-wrapper" class="d-flex flex-column justify-content-center container ">

        <div id="breadbrumbs"
             class="d-flex justify-content-start container mt-5 mb-2 w-80"
             aria-label="breadcrumbs">
            <div class="btn-group container p-0"
                 role="group">
                <a asp-controller="UserDashboard" asp-action="UserHome">
                    <button type="button" class="btn btn-sm btn-dark btn-arrow-right text-white-50">HOME</button>
                </a>

                <a asp-controller="UserDashboard" asp-action="ScholarshipDetails">
                    <button type="button" class="btn btn-sm btn-success btn-arrow-right text-white">SCHOLARSHIP DETAILS</button>
                </a>

            </div>
        </div>

        <div class="d-flex flex-column justify-content-center container w-80">
            <div class="border-content ">

                <div class="text-center bg-dark p-2">
                    <h1 class="text-greenpigment mb-0"><strong>Scholarship Details</strong></h1>
                </div>
                <div class="strip-gh"></div>

                <div class="p-4">

                    <img src="/images/application.png" height="600px" width="auto" class="visible-lg-inline-block mr-1" alt="">
                </div>

                <div class="d-flex justify-content-end mt-2 p-3">
                    <a asp-controller="UserAccount" asp-action="AccountDetails">
                        <button class="btn btn-sm btn-green " style="font-size: 20px">
                            Accounts
                        </button>
                    </a>
                </div>

            </div>
        </div>


    </div>
    @* Appliaction Category End *@

</div>