@using Microsoft.AspNetCore.Identity
@using FinalProject.Data;
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="UserAccount" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="UserAccount" asp-action="SignUp" style="font-size: 28px; font-family: 'Cairo-Regular', sans-serif;">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="UserAccount" asp-action="SignIn" style="font-size: 28px; font-family: 'Cairo-Regular', sans-serif;">Login</a>
        </li>
    }
</ul>
