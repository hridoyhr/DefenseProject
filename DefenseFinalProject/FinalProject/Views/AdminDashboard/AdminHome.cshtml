@model StudentInfoModel;

@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="body-bg-green register-form-div">
    @* Dashboard Home start *@

    <div id="site-wrapper" class="d-flex flex-column justify-content-center container ">

        <div id="breadbrumbs" class="d-flex justify-content-start container mt-5 mb-2 w-80" aria-label="breadcrumbs">
            <div class="btn-group container p-0" role="group">

                <a asp-controller="AdminDashboard" asp-action="AdminHome">
                    <button type="button" class="btn btn-sm btn-dark btn-arrow-right text-white">HOME</button>
                </a>

            </div>
        </div>

        <div class="d-flex flex-column justify-content-center container w-80">
            <div class="border-content ">

                <div class="text-center bg-dark p-2">
                    <h1 class="text-white-50 mb-0"><strong>Admin Dashboard</strong></h1>

                    <small class="text-info mt-0">
                        Logged in as
                        <a class="text-info" asp-controller="Profile" asp-action="ProfileDetails">Admin</a>
                    </small>
                </div>

                <div class="strip-gh"></div>

                <div class="d-lg-flex justify-content-between w-100 p-4">
                    <a asp-controller="AdminDashboard" asp-action="StudentInfo" class="dash-item-link">

                        <div class="dash-item d-flex flex-column justify-content-center text-center align-items-center">
                            <div class="d-flex p-1 mt-2 dash-item-icon"><i class="fas fa-file-alt fa-5x"></i></div>
                            <div class="d-flex p-1">
                                <h5 class="text-white-50">Student's Information </h5>
                            </div>
                        </div>
                    </a>

                    <a asp-controller="AdminDashboard" asp-action="Scholarship" class="dash-item-link">

                        <div class="dash-item d-flex flex-column justify-content-center text-center align-items-center">
                            <div class="d-flex p-1 mt-2 dash-item-icon"><i class="fas fa-hand-holding-usd fa-5x"></i></div>
                            <div class="d-flex p-1">
                                <h5 class="text-white-50">New Scholarship</h5>
                            </div>
                        </div>
                    </a>

                    <a asp-controller="AdminDashboard" asp-action="Transaction" class="dash-item-link">

                        <div class="dash-item d-flex flex-column justify-content-center text-center align-items-center">
                            <div class="d-flex p-1 mt-2 dash-item-icon"><i class="fas fa-id-card fa-5x"></i></div>
                            <div class="d-flex p-1">
                                <h5 class="text-white-50">Transaction Details</h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>


    </div>
    @* Dashboard Home End *@
</div>