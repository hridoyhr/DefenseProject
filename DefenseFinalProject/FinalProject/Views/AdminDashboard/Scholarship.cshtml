@{
    ViewData["Title"] = "BuildScholarship";
    Layout = "~/Views/Shared/_Layout-Scholar.cshtml";
}

<div class="body-bg-green register-form-div">
    @* Appliaction Category Start *@
    <div id="site-wrapper" class="d-flex flex-column justify-content-center container ">

        <div id="breadbrumbs"
             class="d-flex justify-content-start container mt-5 mb-2 w-80"
             aria-label="breadcrumbs">
            <div class="btn-group container p-0"
                 role="group">
                <a asp-controller="AdminDashboard" asp-action="AdminHome">
                    <button type="button" class="btn btn-sm btn-dark btn-arrow-right text-white-50">HOME</button>
                </a>

                <a asp-controller="AdminDashboard" asp-action="BuildScholarship">
                    <button type="button" class="btn btn-sm btn-success btn-arrow-right text-white">SCHOLARSHIP DETAILS</button>
                </a>

            </div>
        </div>

        <div class="d-flex flex-column justify-content-center container w-80">
            <div class="border-content ">

                <div class="text-center bg-dark p-2">
                    <h1 class="text-greenpigment mb-0"><strong>Scholarship Details</strong></h1>
                </div>
                <div class="p-5 d-flex flex-column">
                    <div>
                        <h4>How Many Types of Expenss? </h4>
                        <div class="form-group">
                            <input type="number" id="count" name="count" class="form-control" />
                        </div>
                        <button id="submitquantity" class="btn btn-success">Submit</button>
                    </div>
                    <form asp-action="Scholarship" method="post" asp-controller="AdminDashboard">

                        <div class="mt-3" id="scholarship">

                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>


</div>


@section Scripts
{
    <script type="text/javascript">
        $("#submitquantity").click(function (event) {
            var count = $("#count").val() == "" ? 0 : $("#count").val();
            $.ajax({
                method: "GET",
                url: "BuildScholarship?quantity=" + count
            }).done(function (response) {
                $("#scholarship").html(response);
            }).fail(function (xhr, ajaxOptions, thrownError) {
                //console.log(xhr.status);
                //console.log(thrownError);
                alertify.set('notifier', 'position', 'top-right');
                alertify.error('Marks not entered! Please enter mark for this exam!');
            });
        });
    </script>
}