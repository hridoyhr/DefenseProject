@model TransactionModel;

@{
    ViewBag.Title = "Transaction";
}

<div class="body-bg-green register-form-div">
    @* Navbar Start *@
    <header>

        <nav class="navbar navbar-expand-xl navbar-dark bg-dark fixed-top py-0">
            <div class="d-flex justify-content-between mx-2 w-100">

                <div class="d-flex justify-content-start mx-2">
                    <a class="navbar-brand navbar-text" href="/">
                        <img src="/images/body.png" height="30" width="auto" class="visible-lg-inline-block mr-1" alt="">
                        <span style="vertical-align: middle">Scholarship Monitoring System</span>
                    </a>
                </div>

                <div class="d-flex justify-content-end mx-2">

                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">

                            <li class="nav-item mr-3">
                                <h5>
                                    <a class="nav-link text-success">
                                        <i class="fas fa-user mr-1"></i>Admin
                                    </a>
                                </h5>
                            </li>

                            <li class="nav-item mx-1">
                                <h5>
                                    <a class="nav-link" asp-controller="Account" asp-action="Register">
                                        LOGOUT
                                        <i class="fas fa-sign-out-alt ml-1"></i>
                                    </a>
                                </h5>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    @* Navbar End *@

    @* Dashboard Home start *@

    <div id="site-wrapper" class="d-flex flex-column justify-content-center container ">

        <div id="breadbrumbs" class="d-flex justify-content-start container mt-5 mb-2 w-80" aria-label="breadcrumbs">
            <div class="btn-group container p-0" role="group">

                <a asp-controller="AdminDashboard" asp-action="AdminHome">
                    <button type="button" class="btn btn-sm btn-dark btn-arrow-right text-white">HOME</button>
                </a>
                <a asp-controller="AdminDashboard" asp-action="Transaction">
                    <button type="button" class="btn btn-sm btn-success btn-arrow-right text-white">TRANSACTION</button>
                </a>

            </div>
        </div>

        <div class="d-flex flex-column justify-content-center container w-80">
            <div class="border-content ">

                <div class="text-center bg-dark p-2">
                    <h1 class="text-white-50 mb-0"><strong>Transaction Information</strong></h1>

                    <small class="text-info mt-0">
                        Logged in as
                        <a class="text-info" asp-controller="Profile" asp-action="ProfileDetails">Admin</a>
                    </small>
                </div>

                <div class="strip-gh"></div>

                @* Transaction Start *@
                <div class="bg-dark">
                    <div class="wrapper rounded ">
                        <nav class="navbar navbar-expand-lg navbar-dark dark d-lg-flex align-items-lg-start">
                            <a class="navbar-brand text-white-50" href="#" style="font-size: 30px">Transactions</a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav ml-lg-auto">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">
                                            <span class="fas fa-bell font-weight-bold"></span>
                                        </a>

                                    </li>
                                    <li class="nav-item-p "> <a href="#"><span class="fas fa-search"></span></a> <input type="search" class="dark" placeholder="Search"> </li>
                                </ul>
                            </div>

                        </nav>
                        <div class="row mt-2 pt-2">
                            <div class="col-md-6" id="income">
                                <div class="d-flex justify-content-start align-items-center">

                                    <p class="text mx-3 text-white-50">Scholarship Total Amount</p>
                                    <p class="text-white-50 ml-4 money">20000 tk</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-md-end align-items-center">

                                    <div class="text mx-3 text-white-50">Expense</div>
                                    <div class="text-white ml-4 money text-white-50">8000 tk</div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <ul class="nav nav-tabs w-75">
                                <li class="nav-item"> <a class="nav-link active" href="#history">History</a> </li>
                                <li class="nav-item bg-transparent"> <a class="nav-link" href="#">Reports</a> </li>
                            </ul> <button class="btn btn-primary">Confirm Transaction</button>
                        </div>
                        <div class="table-responsive mt-3">
                            <table class="table table-dark table-borderless">
                                <thead>
                                    <tr>
                                        <th scope="col">Activity</th>
                                        <th scope="col">Mode</th>
                                        <th scope="col">Date</th>
                                        <th scope="col" class="text-right">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td scope="row">Tution Fee </td>
                                        <td><span class="fas fa-cc-mastercard"></span></td>
                                        <td class="text-muted">12 Jul 2020, 12:30 PM</td>
                                        <td class="d-flex justify-content-end align-items-center"> <span class="fas fa-long-arrow-up mr-1"></span> 3000 tk </td>
                                    </tr>
                                    <tr>
                                        <td scope="row">Food </td>
                                        <td><span class="fas fa-cc-mastercard"></span></td>
                                        <td class="text-muted">11 Jul 2020, 2:00 PM</td>
                                        <td class="d-flex justify-content-end align-items-center"> <span class="fas fa-long-arrow-up mr-1"></span> 2000 tk </td>
                                    </tr>
                                    <tr>
                                        <td scope="row">Health </td>
                                        <td><span class="fal fa-cc-visa"></span></td>
                                        <td class="text-muted">10 Jul 2020, 8:30 PM</td>
                                        <td class="d-flex justify-content-end align-items-center"> <span class="fas fa-long-arrow-down mr-1"></span> 2000 tk </td>
                                    </tr>
                                    <tr>
                                        <td scope="row">Others </td>
                                        <td><span class="fas fa-cc-visa"></span></td>
                                        <td class="text-muted">10 Jul 2020, 8:30 PM</td>
                                        <td class="d-flex justify-content-end align-items-center"> <span class="fas fa-long-arrow-down mr-1"></span>1000 tk </td>
                                    </tr>



                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-between align-items-center results">
                            <span class="pl-md-3 text-white-50">Showing<b class="text-white"> 1-7 0f 200 </b> trasactions</span>
                            <div class="pt-3">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li class="page-item disabled"> <a class="page-link" href="#" aria-label="Previous"> <span aria-hidden="true">&lt;</span> </a> </li>
                                        <li class="page-item"> <a class="page-link" href="#" aria-label="Next"> <span aria-hidden="true">&gt;</span> </a> </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                @* Transaction End *@

            </div>
        </div>


    </div>
    @* Dashboard Home End *@
</div>
