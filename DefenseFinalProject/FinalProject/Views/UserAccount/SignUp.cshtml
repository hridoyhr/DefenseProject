
@model SignUpModel;

@{
    ViewBag.Title = "Register";
    Layout = "_Layout-Scholar";
}


<!-- SignUp Page Start -->
<div class="body-bg-green register-form-div">
    <div class="align-self-center my-4 w-md-80 w-lg-85 w-xl-75" style="margin-left: 220px;">
        <div class="d-lg-flex border-content mt-lg-5">

            <div class="d-flex flex-column justify-content-center text-center bg-dark p-lg-4 p-2 w-100">
                <div class="d-flex flex-column text-whitesmoke">
                    <h2 class="text-white-50">Welcome</h2>
                </div>
                <div class="mb-1 p-lg-5">
                    <img class="img-lg-50 img-fluid-15" src="/images/body.png" alt="">
                </div>
                <div class="d-flex flex-column text-whitesmoke">
                    <h2 class="text-white-50">Scholarship Monitoring System</h2>
                </div>
            </div>

            <div class="d-flex strip-gv"></div>

            <div class="d-flex flex-column justify-content-center p-5 w-100 register-form">

                <h4 class="mb-0"><strong>SIGNUP</strong></h4>
                <p><small class="text-secondary mt-0">(new applicants only)</small></p>

                <form accept-charset="UTF-8" id="register-form" method="POST" class="" asp-controller="Account" asp-action="Register">

                    <div class="form-row">
                        <div class="form-group col-lg-12">

                            <h6 class="m-0"><span class="text-danger">*</span><label for="id_full_name">Full Name:</label></h6>

                            <div class="input-group">

                                <div class="input-group-prepend">
                                    <span class="input-group-text pl-2 pr-2"><i class="fas fa-user"></i></span>
                                </div>

                                <input asp-for="FullName" maxlength="254" autofocus class="form-control form-control-sm" class="form-control form-control-sm"
                                       id="id_full_name">

                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span><br />
                            <small class="text-secondary">Same as printed in NID/Passport</small>

                        </div>

                    </div>

                    <div class="form-row">

                        <div class="form-group col-lg-12">

                            <h6 class="m-0"><span class="text-danger">*</span><label for="id_email">Email Address:</label></h6>

                            <div class="input-group">

                                <div class="input-group-prepend">
                                    <span class="input-group-text pl-2 pr-2"><i class="fas fa-at"></i></span>
                                </div>

                                <input asp-for="EmailAddress" maxlength="254" class="form-control form-control-sm"
                                       id="id_email">

                            </div>
                            <span asp-validation-for="EmailAddress" class="text-danger"></span><br />
                            <small class="text-secondary">example@email.com</small>

                        </div>

                    </div>

                    <div class="form-row">

                        <div class="form-group col-lg-12">

                            <h6 class="m-0">
                                <span class="text-danger">*</span><label for="id_phone_mobile">Mobile Phone #:</label>
                            </h6>

                            <div class="input-group">

                                <div class="input-group-prepend">
                                    <span class="input-group-text pl-2 pr-2"><i class="fas fa-mobile-alt"></i></span>
                                </div>
                                <input asp-for="MobilePhone" maxlength="12" pattern="[\d]{10,12}"
                                       class="form-control form-control-sm" id="id_phone_mobile">

                            </div>
                            <span asp-validation-for="MobilePhone" class="text-danger"></span><br />
                            <small class="text-secondary">Format (ex: 0123456789)</small>

                        </div>

                    </div>

                    <div class="form-row">

                        <div class="form-group col-lg-12">

                            <h6 class="m-0"><span class="text-danger">*</span><label for="id_password1">Password:</label></h6>

                            <div class="input-group">

                                <div class="input-group-prepend">
                                    <span class="input-group-text pl-2 pr-2"><i class="fas fa-key"></i></span>
                                </div>

                                <input asp-for="Password" class="form-control form-control-sm" id="id_password1">

                                <div class="input-group-append">
                                    <span class="pwd_show input-group-text border-left-0 pl-1 pr-1">
                                        <i class="fas fa-eye-slash"></i>
                                    </span>
                                </div>

                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span><br />
                            <small class="text-secondary">
                                <ul>
                                    <li>Your password can&#39;t be too similar to your other personal information.</li>
                                    <li>Your password must contain at least 8 characters.</li>
                                    <li>Your password can&#39;t be a commonly used password.</li>
                                    <li>Your password can&#39;t be entirely numeric.</li>
                                </ul>
                            </small>

                        </div>

                    </div>

                    <div class="form-row">

                        <div class="form-group col-lg-12">

                            <h6 class="m-0">
                                <span class="text-danger">*</span><label for="id_password2">Password confirmation:</label>
                            </h6>

                            <div class="input-group">

                                <div class="input-group-prepend">
                                    <span class="input-group-text pl-2 pr-2"><i class="fas fa-key"></i></span>
                                </div>

                                <input asp-for="PasswordConfirmation" class="form-control form-control-sm" id="id_password2">

                            </div>
                            <span asp-validation-for="PasswordConfirmation" class="text-danger"></span><br />
                            <small class="text-secondary">Enter the same password as before, for verification.</small>

                        </div>

                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button id="submit" type="submit" class="btn btn-sm btn-green">
                            SIGN UP<i class="fas fa-user-plus ml-2"></i>
                        </button>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>
<!-- SignUp Page End -->
