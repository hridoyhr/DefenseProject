@model PaymentModel


@{
    ViewBag.Title = "Payment";
}
<div class="body-bg-green register-form-div">
    <div id="site-wrapper" class="d-flex flex-column justify-content-center container ">

        <div id="breadbrumbs" class="d-flex justify-content-start container mt-4 mb-2 w-80" aria-label="breadcrumbs">
            <div class="btn-group container p-0" role="group">
                <a asp-controller="UserDashboard" asp-action="UserHome">
                    <button type="button" class="btn btn-sm btn-dark btn-arrow-right text-white-50">HOME</button>
                </a>

                <a asp-controller="UserAccount" asp-action="Payment">
                    <button type="button" class="btn btn-sm btn-arrow-right btn-success text-white">PAYMENT</button>
                </a>
            </div>
        </div>

        @* Payment Start *@
        <div class="card-p mt-p-50 mb-50" style="width: 600px; margin-bottom: 34px; margin-top: 7px">
            <div class="card-title mx-auto"> Payment </div>
            <form asp-action="payment" method="post">
                <span id="card-header">Expense Category</span>
                <div class="row row-1">
                    <input type="hidden" asp-for="CategoryId" />
                    <input asp-for="categoryName" readonly="readonly" class="form-control" />
                </div>

                @*<span id="card-header">Expense Category</span>
        <div class="row row-1">
            <input type="hidden" asp-for="CategoryId" />
            <input asp-for="categoryName" readonly="readonly" class="form-control" />
        </div>*@

                <span id="card-header">Account Number:</span>
                <div class="row row-1">
                    <div class="col-2">
                        <img class="img-fluid" src="https://img.icons8.com/color/48/000000/mastercard-logo.png" />
                    </div>
                    <div class="col-7">
                        <input asp-for="phoneNumber" type="text" placeholder="**** **** **** 3193">
                    </div>
                </div>

                <span id="card-header">Account Name:</span>
                <div class="row row-1">
                    <div class="col-7">
                        <input asp-for="UserName" type="text">
                    </div>
                </div>

                <span id="card-header">Bill Details:</span>
                <div class="row row-1">
                    <div class="col">
                        <textarea class="form-control-sm" style="padding: 2.25rem 9.5rem; text-align: left;" rows="4" asp-for="Details"></textarea>
                    </div>
                </div>

                @*<span id="card-header">Details</span>
        <div class="row-1">
            <div class="col">
                <div class="row-1">
                    <div class="row row-2"> <textarea class="form-control" rows="4" asp-for="Details"></textarea> </div>
                </div>
            </div>
        </div>*@

                <span id="card-header">Amount:</span>
                <div class="row row-1">
                    <div class="col-sm">
                        <div class="col-6" style="width: 300px"><input asp-for="money" type="number" placeholder="Money"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6"><input readonly="readonly" asp-for="Date" placeholder="Current Date"></div>
                </div>
                <button class="btn-b-green d-flex mx-auto"><b>Submit</b></button>
            </form>
        </div>
        @* Payment End *@

    </div>

    @* Details End *@
</div>