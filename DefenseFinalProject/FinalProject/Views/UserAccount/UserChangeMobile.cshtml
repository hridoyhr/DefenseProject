
@model UserMobileModel;

@{
    ViewBag.Title = "Change Mobile Number";
}

<div class="body-bg-green register-form-div">
    @* Navigation Start *@
    <header>

        <nav class="navbar navbar-expand-xl navbar-dark bg-dark fixed-top  py-0">
            <div class="d-flex justify-content-between mx-2 w-100">

                <div class="d-flex justify-content-start mx-2">
                    <a class="navbar-brand navbar-text" href="/">
                        <img src="/images/body.png" height="30" class="visible-lg-inline-block mr-1" alt="">
                        <span style="vertical-align: middle">Scholarship Monitoring System</span>
                    </a>
                </div>

                <div class="d-flex justify-content-end mx-2">

                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">

                            <li class="nav-item mr-3">
                                <h5>
                                    <a class="nav-link text-success" asp-controller="Userdashboard" asp-action="UserProfileDetails">
                                        <i class="fas fa-user mr-1"></i>Mahmudul
                                        Hasan Hridoy
                                    </a>
                                </h5>
                            </li>

                            <li class="nav-item mx-1">
                                <h5><a asp-controller="UserAccount" asp-action="SignUp" class="nav-link text-success">LOGOUT<i class="fas fa-sign-out-alt ml-1"></i></a></h5>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    @* Navigation End *@

    @* Change Mobile Number Start *@
    <div id="site-wrapper" class="d-flex flex-column justify-content-center container ">

        <div id="breadbrumbs" class="d-flex justify-content-start container mt-5 mb-2 w-md-85 w-lg-90 w-xl-80"
             aria-label="breadcrumbs">
            <div class="btn-group container p-0" role="group">
                <a asp-controller="UserDashboard" asp-action="UserHome">
                    <button type="button" class="btn btn-sm btn-dark btn-arrow-right text-white-50">HOME</button>
                </a>

                <a asp-controller="UserDashboard" asp-action="UserProfile">
                    <button type="button" class="btn btn-sm btn-arrow-right btn-dark text-white">PROFILE DASH</button>
                </a>
                <a asp-controller="UserAccount" asp-action="UserChangeMobile">
                    <button type="button" class="btn btn-sm btn-arrow-right btn-success text-white">CHANGE MOBILE</button>
                </a>

            </div>
        </div>

        <div class="align-self-center w-md-80 w-lg-85 w-xl-75">
            <div class="d-lg-flex border-content">

                <div class="d-flex flex-column justify-content-center text-center bg-dark p-lg-4 p-2 w-100">

                    <div class="mb-1 p-lg-5">
                        <img class="img-lg-50 img-fluid-15" src="/images/body.png" alt="">
                    </div>
                    <div class="d-flex flex-column text-whitesmoke">
                        <h2 class="text-white-50">Scholarship Monitoring System</h2>
                    </div>
                </div>

                <div class="d-flex strip-gv"></div>

                <div class="d-flex flex-column justify-content-center py-4 px-5 w-100">

                    <div class="my-2">
                        <h4 class="mb-0 text-dark"><strong>CHANGE MOBILE NUMBER</strong></h4>
                        <small class="text-info mt-0">
                            Logged in as
                            <a class="text-info" href="/app/profile/2181">Mahmudul Hasan Hridoy</a>
                        </small>
                    </div>

                    <form class="my-2" accept-charset="UTF-8" method="POST">
                        <input type="hidden" name="csrfmiddlewaretoken"
                               value="rpJJ0xZk0SmQnqgSCS0SgZ4GCdXVur4z35rYZa8u1fEJmvrd8xxeaZlwcQWujLiN">

                        <div class="form-row">

                            <div class="input-group">

                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-mobile-alt"></i>
                                    </span>
                                </div>

                                <input type="text" name="phone_mobile" value="01872944289" maxlength="12" placeholder=""
                                       class="form-control form-control-sm" pattern="[\d]{10,12}" required
                                       id="id_phone_mobile">

                            </div>

                            <small id="phone_mobile_error" class="text-secondary">Format (ex: 0123456789)</small>

                        </div>

                        <div class="d-flex justify-content-end mt-2">
                            <button id='loader' type="button" class="btn btn-sm btn-green" hidden>
                                CHANGING<i class="fa fa-spinner fa-spin ml-2"></i>
                            </button>
                            <button id="submit" type="submit" class="btn btn-sm btn-green">
                                <i class="fas fa-save mr-2"></i>CHANGE
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@* Change Mobile Number End *@
